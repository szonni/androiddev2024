        </LinearLayout>

        <!-- 9th -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            tools:ignore="UseCompoundDrawables" >

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/Tuesday"
                android:paddingStart="@dimen/word_padding"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="@dimen/small_img_width_111dp"
                android:layout_height="@dimen/small_img_height_62dp"
                android:src="@drawable/partly_cloudy_windy" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/partly_cloudy_windy_n22c_24c"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>